@using SnackbarB2C2Library
@using SnackbarB2C2.Data
@model IEnumerable<SnackbarB2C2Library.Product>

@{
    ViewData["Title"] = "Home";
}

<hr />
<h1>Snackbar Homepage</h1>
<br />

<table class="table">
    <thead>
        <tr class="table-dark">

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        
        @foreach(Product product in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => product.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => product.Price)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => product.Stock)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => product.Discount)
                </td>

                <td>
                    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">Details</a>
                </td>
            </tr>
        }

    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
