@model SnackbarB2C2Library.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">

        <dt class = "col-sm-2">
            Product name:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class = "col-sm-2">
            Price per product:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt class = "col-sm-2">
            Product discount:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Discount)
        </dd>

        <dt class = "col-sm-2">
            Product stock:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>

        <dt class = "col-sm-2">
            Description:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>

    <div class="DetailProductImage">
        <img href="@Model.ImgPath" />
    </div>

</div>

<div class="formControlButtons">
    <a asp-controller="Products" asp-action="Index" type="button">Back</a>
</div>
